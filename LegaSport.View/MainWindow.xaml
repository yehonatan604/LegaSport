<Window x:Class="LegaSport.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LegaSport.View"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Style="{StaticResource WndStyle}">
    <TabControl>
        <TabItem x:Name="StockTab" Header="Stock">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="2*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <WrapPanel Name="Buttons" Grid.Column="1" Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Name="Btn1" Margin="10" Content="Exercise 1" Click="Btn1_Click" Style="{StaticResource BtnStyle}" />
                    <Button Name="Btn3" Margin="10" Content="Exercise 2" Style="{StaticResource BtnStyle}" />
                </WrapPanel>
                <WrapPanel Name="DataGridPanel" HorizontalAlignment="Center" Grid.Column="4" Margin="0,135,0,0" Grid.RowSpan="2">
                    <Border>
                        <Border.BitmapEffect>
                            <DropShadowBitmapEffect />
                        </Border.BitmapEffect>
                        <DataGrid Name="Dgrid" Margin="10" Style="{StaticResource DgridStyle}"/>
                    </Border>
                </WrapPanel>
            </Grid>
        </TabItem>
        <TabItem Name="Add" Header="Add">
            <StackPanel>
                <WrapPanel Orientation="Horizontal">
                <StackPanel HorizontalAlignment="Left">
                    <TextBlock Text="Name:" Margin="5" />
                    <Border>
                        <TextBox x:Name="ItemName" Margin="5"  Text="Please Enter Name"/>
                    </Border>
                    <TextBlock Text="Item Type:" Margin="5" />
                        <ComboBox x:Name="Itemsss" Margin="5" />
                        <TextBlock Text="Price:" Margin="5" />
                    <Border>
                        <TextBox x:Name="MyPrice" Margin="5" Text="Please Enter Price:" PreviewTextInput="NumValidate"/>
                    </Border>
                    <Button Name="Btn2" Margin="5" Content="Add" Click="Btn2_Click" Style="{StaticResource BtnStyle}" />
                </StackPanel>
                    <StackPanel HorizontalAlignment="Left">
                        <TextBlock Text="Ball Type:" Margin="5" />
                        <ComboBox x:Name="BallType" Margin="5" />
                        <TextBlock Text="Color:" Margin="5" />
                        <ComboBox x:Name="BallColor" Margin="5" />
                        <Button Name="Btng2" Margin="5,55,5,5" Content="Add" Click="Btn2_Click" Style="{StaticResource BtnStyle}" />
                    </StackPanel>
                </WrapPanel>
                <DataGrid x:Name="Dgrid2"></DataGrid>
            </StackPanel>
        </TabItem>
    </TabControl>

</Window>
